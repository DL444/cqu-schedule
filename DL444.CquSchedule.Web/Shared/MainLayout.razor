@inherits LayoutComponentBase
@inject ApiService ApiService;
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

<div class="page">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">重大课表日历</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navBarItems">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navBarItems">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">添加日历</NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="delete-subscription" Match="NavLinkMatch.All">取消订阅</NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="help" Match="NavLinkMatch.All">使用说明</NavLink>
                    </li>
                </ul>
                <ul class="navbar-nav">     
                    <li class="nav-item">
                        <NavLink class="nav-link" href="@Configuration["GitHubAddress"]" target="_blank">GitHub</NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="about">关于</NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="content px-4">
        @Body
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
        _ = ApiService.WarmupAsync();
    }
}
